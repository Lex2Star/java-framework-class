<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="kr.ac.jejunu.UserDao">
        <constructor-arg ref="connectionMaker"/>
    </bean>
    <bean id="connectionMaker" class="kr.ac.jejunu.JejuUserDao">
        <property name="id" value="jeju"></property>
        <property name="password" value="jejupw"></property>
        <property name="url" value="jdbc:mysql://localhost/jeju?characterEncoding=utf-8"></property>
        <property name="className" value="com.mysql.jdbc.Driver"></property>
    </bean>

</beans>